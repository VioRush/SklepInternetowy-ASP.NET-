@model SklepInternetowy.Models.Invoice
@{
    ViewBag.Title = "Details";
}

<h4>Zamówienie</h4>

<div>
    <h4>Data złożenia zamówienia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
    <h4>Produkty w zamówieniu</h4>
    <hr />
    <ul>
        @foreach (var item in Model.Sales)
        {
        <li>@item.Product.Name      @item.Product.Price</li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink("Wróć do listy zamówień", "Index", new { @class = "btn btn-regular" })
</p>

